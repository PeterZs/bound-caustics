<?xml version='1.0' encoding='utf-8'?>

<scene version="0.6.0">
	<default name="useResultant" value="false" />
	<default name="methodMask" value="0" />
	<default name="distrPath" value=""/>
	<default name="timeout" value="999999"/>
	<default name="spp" value="9999"/>
	<default name="distr_min" value="0.0001"/>
	<default name="distr_max" value="1"/>
	<default name="spec_var" value="0.0001"/>
	<default name="force_gamma" value="0"/>
	<default name="force_sample" value="0"/>
	<default name="use_max_var" value="true"/>
	<default name="integrator" value="path_cuts_path"/>
    <default name="res" value="512"/>
	<integrator type="$integrator">
		<integer name="sampleCount" value="$spp"/>
		<integer name="maxDepth" value="5"/>
		<integer name="rrDepth" value="5"/>
		<boolean name="useResultant" value="$useResultant"/>
		<integer name="methodMask" value="$methodMask"/>
		<integer name="pathcutBounce" value="2"/>
		<integer name="cutoffMatrix" value="16"/>
		<integer name="cutoffResultant" value="100"/>
		<float name="pathcutThres" value="0.000001"/>
        <string name="distrPath" value="$distrPath"/>
        <integer name="maxPasses" value="$spp"/>
		<float name="initialRadius" value="0.002"/>
		<!-- <float name="initialRadius" value="0.004"/> -->
        <float name="distr_min" value="$distr_min"/>
        <float name="distr_max" value="$distr_max"/>
        <float name="spec_var" value="$spec_var"/>
        <float name="force_gamma" value="$force_gamma"/>
        <integer name="force_sample" value="$force_sample"/>
        <boolean name="use_max_var" value="$use_max_var"/>
        <integer name="res" value="$res"/>
	</integrator>

	<sensor type="perspective">
		<string name="fovAxis" value="x"/>
		<float name="nearClip" value="0.1"/>
        <float name="fov" value="57"/>

        <transform name="toWorld">
            <rotate x="0.0" y="1.0" z="0.0" angle="180.00"/>
            <rotate x="1.0" y="0.0" z="0.0" angle="-39.58"/>
            <rotate x="0.0" y="1.0" z="0.0" angle="57.07"/>
            <rotate x="0.0" y="0.0" z="1.0" angle="-0.73"/>
            <translate x="3.009096" y="3.606013" z="2.395111"/>
        </transform>


		<sampler type="independent">
			<integer name="sampleCount" value="$spp"/>
		</sampler>

		<film type="hdrfilm">
			<integer name="height" value="1080"/>
			<integer name="width" value="1920"/>
			<rfilter type="box"/>
			<boolean name="banner" value="false"/>
	</film>
	</sensor>


    <shape type="obj">
        <string name="filename" value="../../data/slab10k.obj"/>
        <bsdf type="dielectric">
            <float name="intIOR" value="1.5"/>
            <float name="extIOR" value="1.0"/>
        </bsdf>
        <transform name="toWorld">
            <translate y="0"/>
        </transform>
    </shape>


    <shape type="obj">
        <string name="filename" value="../../data/slab10k_border.obj"/>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0.0001, 0.0001, 0.0001"/>
        </bsdf>
    </shape>


	<shape type="rectangle">
        <bsdf type="diffuse">
            <texture name="reflectance" type="bitmap">
                <string name="filename" value="textures/[2K]Wood30/Wood030_2K_Color.jpg"/>
                <!-- <float name="uscale" value="1"/>
                <float name="vscale" value="1"/> -->
            </texture>
        </bsdf>
		<transform name="toWorld">
			<scale value="3"/>
			<rotate x="1" y="0" z="0" angle="-90"/>
		</transform>

    </shape>

    <emitter type="point">
        <spectrum name="intensity" value="200"/>
        <boolean name="caustic_emitter_multi" value="true"/>
        <transform name="toWorld">
            <translate x="1" y="2" z="-2"/>
        </transform>
    </emitter>
</scene>
